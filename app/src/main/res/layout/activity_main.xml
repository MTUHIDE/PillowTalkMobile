<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/welcome_message"
        android:layout_width="361dp"
        android:layout_height="66dp"
        android:text="PillowTalk Mobile"
        android:textAlignment="center"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.063" />

    <LinearLayout
        android:id="@+id/button_control_layout"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:showDividers="middle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/welcome_message"
        app:layout_constraintVertical_bias="0.059">

        <TextView
            android:id="@+id/button_control_label"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Button Control"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/pillow_1_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pillow 1"
            android:textSize="20sp" />

        <LinearLayout
            android:id="@+id/pillow_1_button_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/pillow_1_button_increase"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Increase" />

            <Button
                android:id="@+id/pillow_1_button_decrease"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Decrease" />
        </LinearLayout>

        <TextView
            android:id="@+id/pillow_2_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pillow 2"
            android:textSize="20sp" />

        <LinearLayout
            android:id="@+id/pillow_2_button_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/pillow_2_button_increase"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Increase" />

            <Button
                android:id="@+id/pillow_2_button_decrease"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Decrease" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>